{
  "name": "ShakeIt",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio de Shake It",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "SoftanSo_1",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^4.1.5",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "electron-log": "^3.0.5",
    "mysql": "^2.17.1",
    "mysql-backup": "^1.0.0",
    "mysql-import": "^2.0.2",
    "mysqldump": "^2.3.0",
    "node-mysql-dump": "^1.0.0",
    "update-electron-app": "^1.3.0"
  }
}
